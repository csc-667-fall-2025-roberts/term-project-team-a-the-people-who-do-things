{
	"name": "scrabble",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"overrides": {
		"node-pg-migrate": {
			"glob": "^11.0.4"
		}
	},
	"scripts": {
		"dev": "cross-env NODE_ENV=development tsx watch src/server/index.ts",
		"dev:vite": "vite",
		"dev:all": "concurrently \"npm run dev\" \"npm run dev:vite\"",
		"build:client": "vite build",
		"build": "npm run build:client && tsc -p tsconfig.json && npm run copy:views",
		"copy:views": "shx cp -r src/views dist",
		"copy:public": "cpy public/**/* dist/public --parents",
		"start": "cross-env NODE_ENV=production node dist/server/index.js",
		"migrate:up": "node-pg-migrate up -m src/DB/migrations --tsx",
		"migrate:down": "node-pg-migrate down -m src/DB/migrations --tsx",
		"migrate:create": "node-pg-migrate create -m src/DB/migrations -j ts",
		"migrate:fake": "node-pg-migrate up --fake -m src/DB/migrations --tsx",
		"db:reset": "node-pg-migrate down --count 999 -m src/DB/migrations --tsx && node-pg-migrate up -m src/DB/migrations --tsx",
		"typecheck": "tsc --noEmit"
	},
	"devDependencies": {
		"@types/bcrypt": "^6.0.0",
		"@types/connect-pg-simple": "^7.0.3",
		"@types/ejs": "^3.1.5",
		"@types/express": "^5.0.5",
		"@types/express-session": "^1.18.2",
		"@types/node": "^24.10.2",
		"@types/pg": "^8.15.6",
		"@types/socket.io-client": "^1.4.36",
		"autoprefixer": "^10.4.22",
		"concurrently": "^9.1.0",
		"cpy-cli": "^6.0.0",
		"cross-env": "^10.1.0",
		"express-session": "^1.18.2",
		"node-pg-migrate": "^8.0.3",
		"postcss": "^8.5.6",
		"prettier": "^3.6.2",
		"prettier-plugin-ejs": "^1.0.3",
		"prettier-plugin-organize-imports": "^4.3.0",
		"shx": "^0.4.0",
		"tailwindcss": "^3.4.18",
		"tsx": "^4.20.6",
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@types/type-check": "^0.3.31",
		"bcrypt": "^6.0.0",
		"connect-pg-simple": "^10.0.0",
		"dotenv": "^17.2.3",
		"ejs": "^3.1.10",
		"express": "^5.1.0",
		"jsonwebtoken": "^9.0.2",
		"pg": "^8.16.3",
		"socket.io": "^4.8.1",
		"socket.io-client": "^4.8.1",
		"vite": "^7.2.4",
		"zod": "^4.1.13"
	}
}
