{
  "name": "scrabble",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "dev:vite": "vite",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:vite\"",
    "build:client": "vite build",
    "build": "npm run build:client && tsc -p tsconfig.json && npm run copy:views",
    "copy:views": "cpy src/views/**/* dist/views --parents",
    "start": "node dist/server/index.js"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/connect-pg-simple": "^7.0.3",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.5",
    "@types/express-session": "^1.18.2",
    "@types/node": "^24.10.0",
    "@types/pg": "^8.15.6",
    "@types/socket.io": "^3.0.1",
    "cpy-cli": "^6.0.0",
    "cross-env": "^10.1.0",
    "express-session": "^1.18.2",
    "prettier": "^3.6.2",
    "prettier-plugin-ejs": "^1.0.3",
    "prettier-plugin-organize-imports": "^4.3.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^5.4.11",
    "concurrently": "^9.1.0"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3",
    "socket.io": "^4.8.1",
    "src": "^1.1.2"
  }
}
