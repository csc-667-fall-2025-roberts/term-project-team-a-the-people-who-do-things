{
  "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node", "express"],
        "paths": { "*": ["./types/*.d.ts"] },
        "allowImportingTsExtensions": true,
        "noEmit": true
      },
  "include": [
    "src/**/*",
    "node_modules/@types/socket.io-client/index.d.ts"
  ]
}
