    <main class="flex-1 overflow-y-auto w-full px-4 py-10">
      <div class="mx-auto max-w-[800px] bg-white p-8 rounded-lg shadow-lg">
        <h1 class="text-4xl font-bold text-blue-600 mb-2">Settings</h1>
        <p class="text-slate-500 mb-10">Manage your account preferences and security</p>

        <!-- Account Settings Section -->
        <section class="mb-10">
          <h2 class="text-xl font-bold text-gray-900 mb-4 pb-2 border-b border-gray-200">
            Account Information
          </h2>

          <form id="account-form" class="space-y-4">
            <div>
              <label for="display-name" class="block text-sm font-medium text-gray-700 mb-1">
                Display Name
              </label>
              <input
                type="text"
                id="display-name"
                name="display-name"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                placeholder="Enter your display name"
                required
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-1">
                Email Address
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                placeholder="your.email@example.com"
                required
              />
            </div>

            <div class="pt-2">
              <button
                type="submit"
                class="px-6 py-2 rounded-md bg-blue-600 font-semibold text-white shadow-sm hover:bg-blue-500 transition focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2"
              >
                Update Account
              </button>
            </div>
          </form>
        </section>

