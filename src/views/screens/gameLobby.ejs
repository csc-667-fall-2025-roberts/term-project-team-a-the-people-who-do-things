<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game Lobby - Scrabble</title>
    <link rel="stylesheet" href="/styles/main.css" />
  </head>
  <body>
    <%- include('../components/loading') %>
    <%- include('../components/header') %>

    <main class="min-h-screen p-8 flex flex-col items-center bg-gray-100">
      <div class="bg-white rounded-lg shadow-lg p-8 w-full max-w-4xl mb-8 min-h-[800px]">
        <h1 class="text-3xl font-bold text-gray-800 mb-6 text-center">
          Game Lobby: <span id="game-id-display"></span>
        </h1>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="flex flex-col">
            <h2 class="text-xl font-semibold text-gray-700 mb-4">
              Players (<span id="player-count">0</span>/<span id="max-players-display">0</span>)
            </h2>
            <div id="players-list" class="space-y-3 flex-none overflow-y-auto max-h-[400px]">
              <!-- Players will be loaded here -->
              <p class="text-gray-500 text-center py-4">Waiting for players...</p>
            </div>

            <div class="mt-6 text-center">
              <button
                id="start-game-btn"
                class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-full font-semibold text-lg transition-colors duration-200 hidden"
              >
                Start Game
              </button>
              <p id="waiting-message" class="text-gray-600 mt-4">
                Waiting for host to start the game...
              </p>
            </div>
          </div>

          <div class="flex flex-col"><%- include('../components/chat', { gameId: gameId }) %></div>
        </div>
      </div>
    </main>

    <script>
      window.GAME_ID = "<%= gameId %>";
      console.log("window.GAME_ID set to:", window.GAME_ID);
      console.log("Current pathname:", window.location.pathname);
    </script>
    <% if (process.env.NODE_ENV === 'production') { %>
    <script type="module" src="/js/main.js"></script>
    <% } else { %>
    <script type="module" src="http://localhost:5173/ts/main.ts"></script>
    <% } %>
  </body>
</html>
