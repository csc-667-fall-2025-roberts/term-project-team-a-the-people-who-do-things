<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lobby - Scrabble</title>

    <% if (NODE_ENV === 'production') { %>
    <link rel="stylesheet" href="/styles/main.css" />
    <% } %>
  </head>
  <body class="flex flex-col h-full bg-gray-50">
    <%- include('../components/header') %>

    <main class="flex-1 w-full max-w-[1400px] mx-auto px-4 py-8">
      <div class="w-full">
        <!-- Tab Headers -->
        <div class="flex items-end gap-2 border-b-2 border-gray-200">
          <button
            id="join-tab"
            class="px-6 py-3 text-sm font-bold text-blue-600 transition-colors bg-white border-b-2 border-blue-600 rounded-t-lg focus:outline-none"
          >
            Join Game
          </button>
          <button
            id="create-tab"
            class="px-6 py-3 text-sm font-medium transition-colors border-b-2 border-transparent rounded-t-lg text-slate-500 hover:text-slate-700 hover:bg-slate-50 focus:outline-none"
          >
            Create Game
          </button>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-[3.5fr_1fr] gap-6">
          <!-- Left Column: Tabs Content -->
          <div class="flex flex-col min-h-[calc(100vh-220px)]">
            <!-- Join Game Content -->
            <div
              id="join-tab-content"
              class="hidden h-full p-6 lobby-tab-content lobby-tab-content-active"
            >
              <div id="games-container" class="space-y-4">
                <div
                  class="p-8 italic text-center border rounded-lg shadow-sm bg-white/80 text-slate-500 border-sky-100"
                >
                  Loading active games...
                </div>
              </div>
            </div>

            <!-- Create Game Content -->
            <div id="create-tab-content" class="hidden h-full p-6 lobby-tab-content">
              <div class="max-w-lg p-8 mx-auto bg-white border shadow-sm rounded-xl border-sky-100">
                <h2 class="mb-6 text-2xl font-bold text-center text-slate-800">Create New Game</h2>
                <form id="create-game-form" class="space-y-6">
                  <div>
                    <label for="game-title" class="block mb-2 text-sm font-semibold text-slate-700"
                      >Game Title</label
                    >
                    <input
                      type="text"
                      id="game-title"
                      name="title"
                      placeholder="e.g. My Scrabble Game"
                      maxlength="30"
                      class="w-full px-4 py-2.5 bg-white border border-slate-300 rounded-lg text-slate-700 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm"
                    />
                  </div>
                  <div>
                    <label for="max-players" class="block mb-2 text-sm font-semibold text-slate-700"
                      >Max Players</label
                    >
                    <select
                      id="max-players"
                      name="maxPlayers"
                      class="w-full px-4 py-2.5 bg-white border border-slate-300 rounded-lg text-slate-700 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm"
                    >
                      <option value="2">2 Players</option>
                      <option value="3">3 Players</option>
                      <option value="4">4 Players</option>
                    </select>
                  </div>
                  <div>
                    <label for="time-limit" class="block mb-2 text-sm font-semibold text-slate-700"
                      >Turn Time Limit (seconds)</label
                    >
                    <input
                      type="number"
                      id="time-limit"
                      name="timeLimit"
                      value="60"
                      min="30"
                      max="300"
                      class="w-full px-4 py-2.5 bg-white border border-slate-300 rounded-lg text-slate-700 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition shadow-sm"
                    />
                  </div>
                  <button
                    type="submit"
                    class="w-full bg-blue-600 text-white py-3 px-6 rounded-full font-bold shadow-md hover:bg-blue-700 transition transform hover:-translate-y-0.5 flex justify-center items-center gap-2"
                  >
                    <span>Create Game</span>
                  </button>
                </form>
              </div>
            </div>
          </div>

          <!-- Right Column: Chat -->
          <div class="w-full">
            <div
              class="bg-white rounded-lg shadow-md border border-gray-200 overflow-hidden h-[calc(100vh-180px)] sticky top-24"
            >
              <%- include('../components/chat', { gameId: 'lobby' }) %>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script>
      window.GAME_ID = window.GAME_ID || null;
      console.log("window.GAME_ID:", window.GAME_ID);
      console.log("Current pathname:", window.location.pathname);
    </script>

    <% if (NODE_ENV === 'production') { %>
    <script type="module" src="/js/main.js"></script>
    <% } else { %>
    <script type="module" src="http://localhost:5173/ts/main.ts"></script>
    <% } %>
  </body>
</html>
