<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-50">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game Room - Scrabble</title>
  </head>
  <body class="flex flex-col h-full overflow-hidden bg-gray-50">
    <%- include('../components/header') %>

    <main
      class="flex-1 w-full max-w-[1400px] mx-auto flex overflow-hidden bg-white shadow-sm border-x border-gray-200"
    >
      <div
        class="z-10 flex flex-col hidden gap-6 p-6 overflow-y-auto bg-white border-r border-gray-200 shadow-sm w-72 lg:flex"
      >
        <section class="players-panel">
          <h3>Players</h3>
          <div id="players-list"></div>
        </section>

        <section class="game-info">
          <div class="info-item">
            <span>Current Turn:</span>
            <span id="current-turn">-</span>
          </div>
          <div class="info-item">
            <span>Tiles Remaining:</span>
            <span id="tiles-remaining">100</span>
          </div>
        </section>

        <section class="game-actions">
          <button id="pass-btn" class="btn btn-secondary">Pass Turn</button>
          <button id="exchange-btn" class="btn btn-secondary">Exchange Tiles</button>
          <button id="shuffle-btn" class="btn btn-secondary">Shuffle Hand</button>
        </section>
      </div>

      <!-- Main game area -->
      <div class="relative flex flex-col items-center flex-1 p-4 overflow-y-auto bg-slate-100">
        <%- include('../components/scrabbleBoard') %>

        <!-- Player hand -->
        <section class="flex flex-col items-center w-full max-w-2xl gap-6 pb-8 mt-8">
          <h3>Your Hand</h3>
          <div id="player-hand" class="transition-all"></div>
          <button id="submit-move-btn" class="btn btn-primary">Submit Move</button>
        </section>
      </div>
      <div class="flex flex-col h-64 border-t border-gray-200 bg-gray-50">
        <%- include('../components/chat', { gameId: gameId }) %>
      </div>
    </main>

    <script src="/socket.io/socket.io.js"></script>
    <script>
      // Make io available globally for socket.js
      window.io = io;
      window.GAME_ID = "<%= gameId %>";
    </script>

    <% if (NODE_ENV === 'production') { %>
    <script type="module" src="/js/main.js"></script>
    <% } else { %>
    <script type="module" src="http://localhost:5173/ts/main.ts"></script>
    <% } %>
  </body>
</html>
