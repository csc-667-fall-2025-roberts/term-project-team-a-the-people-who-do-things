<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Game Room - Scrabble</title>
    <% if (NODE_ENV === 'production') { %>
    <link rel="stylesheet" href="/styles/main.css">
  <% } %>
  </head>
  <body class="flex flex-col w-screen h-screen p-2 overflow-hidden bg-gray-50 text-slate-900">
    <div class="flex-1 w-full max-w-[1600px] mx-auto flex flex-col bg-white border-x-[16px] border-b-[16px] border-t-0 border-blue-600 rounded-b-xl shadow-2xl overflow-hidden relative">
    <%- include('../components/header') %>

    <main
      class="relative flex flex-1 overflow-hidden"
    >
      <div
        class="z-10 flex flex-col hidden h-full bg-white border-r border-gray-200 shadow-sm w-72 lg:flex"
      >
        <div class="flex-1 p-6 space-y-8 overflow-y-auto">
            
            <!-- Players -->
            <section>
                <h3 class="mb-3 font-bold tracking-widest uppercase text-s text-slate-400">Players</h3>
                <div id="players-list" class="space-y-2"></div>
            </section>

            <!-- Game Info -->
            <section class="p-4 border shadow-sm bg-slate-50 rounded-xl border-slate-100">
                <div class="flex items-center justify-between pb-2 mb-2 border-b border-slate-200">
                    <span class="text-sm font-medium text-slate-600">Current Turn:</span>
                    <span id="current-turn" class="text-sm font-bold text-blue-600">-</span>
                </div>
                <div class="flex items-center justify-between">
                    <span class="text-sm font-medium text-slate-600">Tiles Remaining:</span>
                    <span id="tiles-remaining" class="text-sm font-bold text-slate-800">100</span>
                </div>
            </section>

            <!-- Game Actions -->
            <section class="space-y-3">
            <button
                id="pass-btn"
                class="w-full px-6 py-2 text-base font-medium text-white transition-all duration-200 bg-blue-600 border-none rounded-md cursor-pointer hover:bg-blue-700 hover:-translate-y-px hover:shadow-lg"
            >
                Pass Turn
            </button>
            <button
                id="exchange-btn"
                class="w-full px-6 py-2 text-base font-medium text-white transition-all duration-200 bg-blue-600 border-none rounded-md cursor-pointer hover:bg-blue-700 hover:-translate-y-px hover:shadow-lg"
            >
                Exchange Tiles
            </button>
            <button
                id="shuffle-btn"
                class="w-full px-6 py-2 text-base font-medium text-white transition-all duration-200 bg-blue-600 border-none rounded-md cursor-pointer hover:bg-blue-700 hover:-translate-y-px hover:shadow-lg"
            >
                Shuffle Hand
            </button>
            </section>
        </div>
      </div>

      <!-- Main game area -->
      <div class="relative flex flex-col items-center flex-1 p-4 overflow-y-auto bg-slate-100">
        <%- include('../components/scrabbleBoard') %>

        <!-- Player hand -->
        <section class="flex flex-col items-center w-full max-w-2xl gap-6 pb-8 mt-8">
          <h3>Your Hand</h3>
          <div id="player-hand" class="transition-all"></div>
          <button
            id="submit-move-btn"
            class="px-8 py-2 text-base font-medium text-white transition-all duration-200 bg-blue-600 border-none rounded-md cursor-pointer hover:bg-blue-700 hover:-translate-y-px hover:shadow-lg"
          >
            Submit Move
          </button>
        </section>
      </div>
      <div class="z-10 flex flex-col hidden h-full bg-white border-l border-gray-200 shadow-sm w-80 lg:flex"">
        <%- include('../components/chat', { gameId: gameId }) %>
      </div>
    </main>
    </div>
    

    <script src="/socket.io/socket.io.js"></script>
    <script>
      // Make io available globally for socket.js
      window.io = io;
      window.GAME_ID = "<%= gameId %>";
    </script>

    <% if (NODE_ENV === 'production') { %>
    <script type="module" src="/js/main.js"></script>
    <% } else { %>
    <script type="module" src="http://localhost:5173/ts/main.ts"></script>
    <% } %>
  </body>
</html>
