<div class="chat-wrapper bg-white rounded-lg shadow-md flex flex-col w-full">
    <div class="chat-header-tiles p-4 border-b border-gray-200">
        <div class="scrabble-logo-container chat-tiles" id="chat-logo">
            <span class="scrabble-tile" data-letter="C" data-points="3"></span>
            <span class="scrabble-tile" data-letter="H" data-points="4"></span>
            <span class="scrabble-tile" data-letter="A" data-points="1"></span>
            <span class="scrabble-tile" data-letter="T" data-points="1"></span>
        </div>
    </div>

    <div id="chat-messages" class="chat-messages-container flex-1 overflow-y-auto p-4 space-y-2">
        <!-- Messages will be loaded here -->
    </div>

    <form id="chat-form" class="chat-input-wrapper p-4 border-t border-gray-200 flex gap-2">
        <input
            type="text"
            id="chat-message-input"
            placeholder="Type a message..."
            maxlength="500"
            autocomplete="off"
            class="flex-1 px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
        >
        <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2 rounded-lg font-semibold transition-colors">
            Send
        </button>
    </form>
</div>