<div
  id="chat-container"
  data-game-id="<%= (typeof gameId !== 'undefined') ? gameId : '' %>"
  class="flex flex-col h-full bg-white rounded-lg shadow-md overflow-hidden border border-gray-200"
>
  <!-- TODO  Unresolved variable or type gameId  -->
  <div class="flex items-center justify-center p-3 border-b border-gray-200 bg-blue-50/50">
    <div class="flex gap-1 items-center select-none" id="chat-logo">
      <div
        class="relative w-9 h-9 bg-white border-2 border-gray-300 rounded shadow-sm flex items-center justify-center transform hover:-translate-y-0.5 transition-transform"
      >
        <span class="text-lg font-bold text-slate-900">C</span>
      </div>

      <div
        class="relative w-9 h-9 bg-white border-2 border-gray-300 rounded shadow-sm flex items-center justify-center transform hover:-translate-y-0.5 transition-transform"
      >
        <span class="text-lg font-bold text-slate-900">H</span>
      </div>

      <div
        class="relative w-9 h-9 bg-white border-2 border-gray-300 rounded shadow-sm flex items-center justify-center transform hover:-translate-y-0.5 transition-transform"
      >
        <span class="text-lg font-bold text-slate-900">A</span>
      </div>

      <div
        class="relative w-9 h-9 bg-white border-2 border-gray-300 rounded shadow-sm flex items-center justify-center transform hover:-translate-y-0.5 transition-transform"
      >
        <span class="text-lg font-bold text-slate-900">T</span>
      </div>
    </div>
  </div>

  <div id="chat-messages" class="flex-1 overflow-y-auto p-4 space-y-3 bg-white scroll-smooth">
    <div class="text-center text-xs text-gray-400 italic mt-4">Chat room initialized...</div>
  </div>

  <form id="chat-form" class="p-3 border-t border-gray-200 bg-gray-50 flex gap-2 items-center">
    <div class="relative flex-1">
      <!--TODO Missing associated label  -->
      <input
        type="text"
        id="chat-message-input"
        placeholder="Type a message..."
        maxlength="500"
        autocomplete="off"
        class="w-full pl-4 pr-10 py-2 text-sm border border-gray-300 rounded-full focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 shadow-sm transition-shadow"
      />
      <button
        type="submit"
        class="absolute right-1 top-1 p-1.5 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition-colors shadow-sm flex items-center justify-center"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 20 20"
          fill="currentColor"
          class="w-4 h-4 transform rotate-90"
        >
          <path
            d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"
          />
        </svg>
      </button>
    </div>
  </form>
</div>
